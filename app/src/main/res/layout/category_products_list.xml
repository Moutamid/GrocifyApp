<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/PrContainer"
    android:background="@drawable/btn_bg"
    android:backgroundTint="#05009172"
    android:layout_margin="8dp">

    <ImageView
        android:id="@+id/PrImage"
        android:layout_width="70dp"
        android:layout_margin="10dp"
        android:scaleType="fitXY"
        android:layout_height="70dp"
        android:src="@drawable/banner"/>

    <TextView
        android:id="@+id/PrName"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_toRightOf="@id/PrImage"
        android:text="Salad"
        android:fontFamily="@font/lexend_semi_bold"
        android:layout_marginTop="20dp"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textColor="#000"/>

    <TextView
        android:id="@+id/PrPrice"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_toRightOf="@id/PrImage"

        android:layout_below="@id/PrName"
        android:text="200 $"
        android:textSize="15dp"
        android:textColor="#5E5757"
        android:layout_marginTop="5dp"/>

    <TextView
        android:id="@+id/PrExpiryDate"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_below="@id/PrPrice"
        android:text=""

        android:gravity="center"
        android:textSize="15dp"
        android:textColor="#000"
        android:layout_marginTop="15dp"
        android:visibility="invisible"/>


    <ImageView
        android:id="@+id/PrFavoriteImage"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp"/>

</RelativeLayout>