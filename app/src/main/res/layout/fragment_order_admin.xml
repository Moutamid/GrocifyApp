<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cartCheckDrawer"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".UI.CartCheckActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="35dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical">


            <Button
                android:id="@+id/order_confirm"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/btn_bg"
                android:backgroundTint="@color/green_color"
                android:text="Order Confirmation"
                android:textColor="@color/white"
                android:textAllCaps="false"
                app:layout_constraintBottom_toTopOf="@+id/divider5"
                app:layout_constraintEnd_toStartOf="@+id/Cancel"
                app:layout_constraintHorizontal_bias="0.223"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/SavedAmount"
                app:layout_constraintVertical_bias="0.465" />
            <Button
                android:id="@+id/order_deliver"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/btn_bg"
                android:backgroundTint="#009688"
                android:text="Out for Delivery"
                android:textColor="@color/white"
                android:textAllCaps="false"
                app:layout_constraintBottom_toTopOf="@+id/divider5"
                app:layout_constraintEnd_toStartOf="@+id/Cancel"
                app:layout_constraintHorizontal_bias="0.223"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/SavedAmount"
                app:layout_constraintVertical_bias="0.465" />

            <Button
                android:id="@+id/order_complete"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/btn_bg"
                android:backgroundTint="#F44336"
                android:textAllCaps="false"
                android:text="Delivery Completed"
                android:textColor="@color/white"
                app:layout_constraintBottom_toTopOf="@+id/divider5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/SavedAmount" />


        </LinearLayout>


    </LinearLayout>

</ScrollView>


