<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@drawable/card_bg"
    android:backgroundTint="#D9D9D9"
    android:elevation="3dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/MainProductID"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:cardCornerRadius="6dp"
        app:cardBackgroundColor="@color/grey_light"
        app:cardElevation="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imgMedicine"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY" />

            <!-- Rotated TextView on the Left -->

            <TextView
                android:id="@+id/txtPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_margin="10dp"
                android:fontFamily="@font/poppins_semibold"
                android:maxLines="1"
                android:text="300"
                android:textColor="#F44336"
                android:shadowColor="@color/colorPrimary"
                android:shadowRadius="2"
                android:textSize="12sp" />

            <RelativeLayout
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:visibility="gone"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_margin="10dp">

                <ImageView
                    android:id="@+id/check_box"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:background="@drawable/circle"
                    android:backgroundTint="@color/black"
                    android:padding="4dp"
                    android:src="@drawable/ic_baseline_favorite_shadow_24" />
            </RelativeLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/txtName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/MainProductID"
        android:fontFamily="@font/poppins_semibold"
        android:gravity="center"
        android:padding="8dp"
        android:layout_marginLeft="12dp"
        android:text=" Ribbon"
        android:textColor="#000"
        android:textSize="12sp" />

</RelativeLayout>
